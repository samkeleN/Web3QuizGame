{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": [
        "hardhat-deploy",
        "hardhat/types",
        "@nomicfoundation/hardhat-ethers"
      ],
      "outDir": "dist",
      "rootDir": ".",
      "resolveJsonModule": true
    },
    "include": ["./scripts", "./deploy", "./test", "./contracts", "./typechain"],
    "exclude": ["node_modules"]
  }